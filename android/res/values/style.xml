<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="DefaultWrap">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  
  <style name="DefaultFill">
  	<item name="android:layout_width">fill_parent</item>
  	<item name="android:layout_height">fill_parent</item>
  </style>
  
  <style name="DefaultWidthFill">
    <item name="android:layout_width">fill_parent</item>
  	<item name="android:layout_height">wrap_content</item>
  </style>
   
  <style name="DefaultHeightFill">
    <item name="android:layout_width">wrap_content</item>
  	<item name="android:layout_height">fill_parent</item>
  </style>
  
  <style name="DefaultLinearWrap" parent="DefaultWrap">
  	<item name="android:orientation">vertical</item>
  	<item name="android:padding">7dp</item>
  </style>
  
  <style name="DefaultLinearFill" parent="DefaultFill">
  	<item name="android:orientation">vertical</item>
  	<item name="android:padding">7dp</item>
  </style>
  
  <style name="DefaultRelativeWrap" parent="DefaultWrap">
  	<item name="android:padding">7dp</item>
  </style>  
  
  <style name="DefaultRelativeFill" parent="DefaultFill">
  	<item name="android:padding">7dp</item>
  </style>  
  
  <!-- everywhere used style -->
  <style name="main_ButtonArea" parent="DefaultFill">
  	<item name="android:orientation">horizontal</item>
  	<item name="android:paddingTop">7dp</item>
  	<item name="android:gravity">center_vertical|center_horizontal</item>
  	<item name="android:layout_gravity">center_vertical|center_horizontal|center</item>
  </style>  
    
  <style name="main_DetailInfoButton">
  	<item name="android:textSize">16dp</item>
  	<item name="android:layout_width">140dp</item>
  	<item name="android:layout_height">40dp</item>
  </style>
  
  <!-- store_main.xml -->
  <style name="store_main_Cell" parent="DefaultWidthFill">
  	<item name="android:padding">7dp</item>
  	<item name="android:layout_weight">1</item>
  </style>
  
  <style name="store_main_Image">
	<item name="android:layout_width">90dp</item>
	<item name="android:layout_height">90dp</item>
	<item name="android:layout_marginRight">6dp</item>
	<item name="android:layout_marginBottom">6dp</item>
	<item name="android:scaleType">centerCrop</item>
  </style>
  
  <style name="store_main_LikeButton">
  	<item name="android:background">@drawable/selector</item>
  	<item name="android:layout_width">160dp</item>
  	<item name="android:layout_height">35dp</item>
  	<item name="android:layout_marginLeft">3dp</item>
  	<item name="android:textSize">12dp</item>
  	<item name="android:textStyle">bold</item>
  	<item name="android:drawablePadding">4dp</item>
  	<item name="android:text">@string/store_main_like_store</item>
  </style>
  
  <style name="store_main_LikeCount">
  	<item name="android:layout_width">50dp</item>
  	<item name="android:layout_height">35dp</item>
  	<item name="android:layout_centerInParent">true</item>
  	<item name="android:textSize">12dp</item>
  	<item name="android:textStyle">bold</item>
  	<item name="android:gravity">center</item>
  </style>
  
  <style name="store_main_Address" parent="DefaultWidthFill">
  	<item name="android:layout_marginTop">7dp</item>
  	<item name="android:textSize">16dp</item>
  	<item name="android:textStyle">bold</item>
  	<item name="android:textColor">#000</item>
  </style>

  <style name="store_main_ScrapButton">
  	<item name="android:layout_width">90dp</item>
  	<item name="android:layout_height">25dp</item>
  	<item name="android:text">@string/store_main_bookmark</item>
  	<item name="android:textSize">12dp</item>
  	<item name="android:textStyle">bold</item>
  	<item name="android:textColor">#fff</item>
  </style>
  
  <style name="store_main_StoreCellButton">
  	<item name="android:background">@drawable/selector</item>
  	<item name="android:layout_width">65dp</item>
  	<item name="android:layout_marginLeft">3dp</item>
  	<item name="android:textSize">11dp</item>
  	<item name="android:layout_height">25dp</item>
  </style>
  
  <style name="store_main_Cover">
  	<item name="android:layout_width">fill_parent</item>
  	<item name="android:layout_height">60dp</item>
  	<item name="android:textColor">#000</item>
	<item name="android:textSize">16dp</item>
	<item name="android:textStyle">bold</item>
  </style>
  
  <style name="store_main_MenuAndTagImage">
  	<item name="android:layout_width">25dp</item>
  	<item name="android:layout_height">wrap_content</item>
  	<item name="android:padding">1dp</item>
  </style>
  
  <style name="store_main_MenuAndTag">
  	<item name="android:layout_width">wrap_content</item>
  	<item name="android:layout_height">wrap_content</item>
  	<item name="android:padding">1dp</item>
  	<item name="android:textSize">15dp</item>
  	<item name="android:textStyle">bold</item>
  </style>
  
  <style name="store_main_User">
  	<item name="android:layout_width">150dp</item>
  	<item name="android:layout_height">wrap_content</item>
  	<item name="android:drawableLeft">@drawable/img_dot</item>
  	<item name="android:drawablePadding">3dp</item>
  	<item name="android:textColor">#777</item>
  	<item name="android:textSize">11dp</item>
  </style>
  <style name="store_main_ViewButton">
  	<item name="android:layout_width">150dp</item>
  	<item name="android:layout_height">40dp</item>
  	<item name="android:textSize">16dp</item>
  	<item name="android:textStyle">bold</item>
  </style>
  
  <style name="store_main_ETCButton">
  	<item name="android:layout_width">150dp</item>
  	<item name="android:layout_height">40dp</item>
  	<item name="android:textSize">16dp</item>
  	<item name="android:textStyle">bold</item>
  </style>
  
  <!-- grid_gallery.xml -->
  <style name="grid_gallery_GridItem" parent="DefaultFill">
  	<item name="android:numColumns">auto_fit</item>
  	<item name="android:verticalSpacing">5dp</item>
  	<item name="android:horizontalSpacing">5dp</item>
  	<item name="android:columnWidth">96dp</item>
  	<item name="android:stretchMode">columnWidth</item>
  	<item name="android:gravity">center</item>
  </style>
</resources>