<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="DefaultWrap">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  
  <style name="DefaultFill">
  	<item name="android:layout_width">fill_parent</item>
  	<item name="android:layout_height">fill_parent</item>
  </style>
  
  <style name="DefaultWidthFill">
    <item name="android:layout_width">fill_parent</item>
  	<item name="android:layout_height">wrap_content</item>
  </style>
   
  <style name="DefaultHeightFill">
    <item name="android:layout_width">wrap_content</item>
  	<item name="android:layout_height">fill_parent</item>
  </style>
  
  <style name="DefaultLinearWrap" parent="DefaultWrap">
  	<item name="android:orientation">vertical</item>
  	<item name="android:padding">7dp</item>
  </style>
  
  <style name="DefaultLinearFill" parent="DefaultFill">
  	<item name="android:orientation">vertical</item>
  	<item name="android:padding">7dp</item>
  </style>
  
  <style name="DefaultRelativeWrap" parent="DefaultWrap">
  	<item name="android:padding">7dp</item>
  </style>  
  
  <style name="DefaultRelativeFill" parent="DefaultFill">
  	<item name="android:padding">7dp</item>
  </style>  
  
  <style name="Cell" parent="DefaultWidthFill">
  	<item name="android:padding">7dp</item>
  </style>
  
  <!-- everywhere used style -->
  
  <style name="ETCButton">
  	<item name="android:layout_width">150dp</item>
  	<item name="android:layout_height">40dp</item>
  	<item name="android:padding">7dp</item>
  	<item name="android:textSize">16dp</item>
  	<item name="android:gravity">left|center</item>
  	<item name="android:drawableRight">@drawable/img_arrow02</item>
  </style>
  
  <!-- activity_store_main.xml -->
  <style name="store_main_Cell" parent="Cell">
  	<item name="android:layout_weight">1</item>
  </style>
  
  <style name="store_main_Image">
  	<item name="android:background">@drawable/img_matji_default</item>
	<item name="android:layout_width">100dp</item>
	<item name="android:layout_height">100dp</item>
	<item name="android:layout_marginRight">6dp</item>
	<item name="android:layout_marginBottom">6dp</item>
	<item name="android:scaleType">centerCrop</item>
  </style>
  
  <style name="store_main_LikeButton">
  	<item name="android:background">@drawable/selector</item>
  	<item name="android:layout_width">150dp</item>
  	<item name="android:layout_height">30dp</item>
  	<item name="android:layout_marginLeft">3dp</item>
  	<item name="android:textSize">11dp</item>
  	<item name="android:textStyle">bold</item>
  	<item name="android:drawablePadding">4dp</item>
  </style>
  
  <style name="store_main_LikeCount">
  	<item name="android:layout_width">50dp</item>
  	<item name="android:layout_height">30dp</item>
  	<item name="android:layout_centerInParent">true</item>
  	<item name="android:textSize">12dp</item>
  	<item name="android:textStyle">bold</item>
  	<item name="android:gravity">center</item>
  </style>
  
  <style name="store_main_Address" parent="DefaultWidthFill">
  	<item name="android:layout_marginTop">7dp</item>
  	<item name="android:textSize">16dp</item>
  	<item name="android:textStyle">bold</item>
  	<item name="android:textColor">#000</item>
  </style>

  <style name="store_main_ScrapButton">
  	<item name="android:layout_width">100dp</item>
  	<item name="android:layout_height">25dp</item>
  	<item name="android:textSize">12dp</item>
  	<item name="android:textStyle">bold</item>
  	<item name="android:textColor">#fff</item>
  </style>
  
  <style name="store_main_StoreCellButton">
  	<item name="android:background">@drawable/selector</item>
  	<item name="android:layout_width">60dp</item>
  	<item name="android:layout_height">25dp</item>
  	<item name="android:layout_marginLeft">3dp</item>
  	<item name="android:textSize">11dp</item>
  </style>
  
  <style name="store_main_Cover">
  	<item name="android:layout_width">fill_parent</item>
  	<item name="android:layout_height">60dp</item>
  	<item name="android:textColor">#000</item>
	<item name="android:textSize">16dp</item>
	<item name="android:textStyle">bold</item>
  </style>
  
  <style name="store_main_MenuAndTagImage">
  	<item name="android:layout_width">25dp</item>
  	<item name="android:layout_height">wrap_content</item>
  	<item name="android:padding">1dp</item>
  </style>
  
  <style name="store_main_MenuAndTag">
  	<item name="android:layout_width">wrap_content</item>
  	<item name="android:layout_height">wrap_content</item>
  	<item name="android:padding">1dp</item>
  	<item name="android:textSize">15dp</item>
  	<item name="android:textStyle">bold</item>
  </style>
  
  <style name="store_main_User">
  	<item name="android:layout_width">150dp</item>
  	<item name="android:layout_height">wrap_content</item>
  	<item name="android:drawableLeft">@drawable/img_dot</item>
  	<item name="android:drawablePadding">3dp</item>
  	<item name="android:textColor">#777</item>
  	<item name="android:textSize">11dp</item>
  </style>
  <style name="store_main_ViewButton">
  	<item name="android:layout_width">150dp</item>
  	<item name="android:layout_height">40dp</item>
  	<item name="android:textSize">16dp</item>
  	<item name="android:textStyle">bold</item>
  </style>
  
  <!-- activity_user_main.xml -->  
  <style name="user_main_Cell" parent="Cell">
  </style>
  
  <style name="user_main_Image">
  	<item name="android:background">@drawable/img_matji_default</item>
	<item name="android:layout_width">70dp</item>
	<item name="android:layout_height">70dp</item>
	<item name="android:layout_marginRight">7dp</item>
	<item name="android:layout_marginBottom">7dp</item>
	<item name="android:scaleType">centerCrop</item>
  </style>

  <style name="user_main_Grade" parent="DefaultWrap">
  	<item name="android:textSize">11dp</item>
  	<item name="android:textStyle">bold</item>
  	<item name="android:textColor">#aaaaff</item>
  	<item name="android:drawableLeft">@drawable/icon_jewel_01diamond</item>
  	<item name="android:drawablePadding">3dp</item>
  </style>
  
  <style name="user_main_Title" parent="DefaultWrap">
  	<item name="android:textSize">16dp</item>
  	<item name="android:textStyle">bold</item>
  	<item name="android:textColor">#333333</item>
  </style>
  
  <style name="user_main_Intro" parent="DefaultWrap">
  </style>
  
  <style name="user_main_FollowButton" parent="DefaultWidthFill">
  	<item name="android:layout_marginTop">7dp</item>
  	<item name="android:textSize">16dp</item>
  	<item name="android:textStyle">bold</item>
  </style>

  <style name="user_main_FollowMessage" parent="DefaultWrap">
  	<item name="android:text">@string/user_main_brandnew</item>
  </style>
  
  <style name="user_main_Count" parent="DefaultWrap">
  </style>

  <style name="user_main_InfoText" parent="DefaultWidthFill">
  	<item name="android:drawableLeft">@drawable/img_dot</item>
	<item name="android:textSize">11dp</item>
	<item name="android:gravity">left</item>
  </style>
  
  <style name="user_main_BlogButton" parent="DefaultWrap">
	<item name="android:textSize">11dp</item>
	<item name="android:textStyle">bold</item>
  </style>
  
  <style name="user_main_MenuAndTagImage">
  	<item name="android:layout_width">25dp</item>
  	<item name="android:layout_height">wrap_content</item>
  	<item name="android:padding">1dp</item>
  </style>
  
  <style name="user_main_MenuAndTag">
  	<item name="android:layout_width">wrap_content</item>
  	<item name="android:layout_height">wrap_content</item>
  	<item name="android:padding">1dp</item>
  	<item name="android:textSize">15dp</item>
  	<item name="android:textStyle">bold</item>
  </style>
  
  <style name="uesr_main_User">
  	<item name="android:layout_width">150dp</item>
  	<item name="android:layout_height">wrap_content</item>
  	<item name="android:drawableLeft">@drawable/img_dot</item>
  	<item name="android:drawablePadding">3dp</item>
  	<item name="android:textColor">#777</item>
  	<item name="android:textSize">11dp</item>
  </style>
  <style name="user_main_ViewButton">
  	<item name="android:layout_width">150dp</item>
  	<item name="android:layout_height">40dp</item>
  	<item name="android:textSize">16dp</item>
  	<item name="android:textStyle">bold</item>
  </style>

  <!-- activity_grid_gallery.xml -->
  <style name="grid_gallery_GridItem" parent="DefaultFill">
  	<item name="android:numColumns">auto_fit</item>
  	<item name="android:verticalSpacing">5dp</item>
  	<item name="android:horizontalSpacing">5dp</item>
  	<item name="android:columnWidth">96dp</item>
  	<item name="android:stretchMode">columnWidth</item>
  	<item name="android:gravity">center</item>
  </style>
</resources>