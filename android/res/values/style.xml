<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="DefaultWrap">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  
  <style name="DefaultFill">
  	<item name="android:layout_width">fill_parent</item>
  	<item name="android:layout_height">fill_parent</item>
  </style>
  
  <style name="DefaultWidthFill">
    <item name="android:layout_width">fill_parent</item>
  	<item name="android:layout_height">wrap_content</item>
  </style>
   
  <style name="DefaultHeightFill">
    <item name="android:layout_width">wrap_content</item>
  	<item name="android:layout_height">fill_parent</item>
  </style>
  
  <style name="DefaultLinearWrap" parent="DefaultWrap">
  	<item name="android:orientation">vertical</item>
  	<item name="android:padding">7dp</item>
  </style>
  
  <style name="DefaultLinearFill" parent="DefaultFill">
  	<item name="android:orientation">vertical</item>
  	<item name="android:padding">7dp</item>
  </style>
  
  <style name="DefaultRelativeWrap" parent="DefaultWrap">
  	<item name="android:padding">7dp</item>
  </style>  
  
  <style name="DefaultRelativeFill" parent="DefaultFill">
  	<item name="android:padding">7dp</item>
  </style>  
  
  <!-- everywhere used style -->
  <style name="main_ButtonArea" parent="DefaultFill">
  	<item name="android:orientation">horizontal</item>
  	<item name="android:paddingTop">7dp</item>
  	<item name="android:gravity">center_vertical|center_horizontal</item>
  	<item name="android:layout_gravity">center_vertical|center_horizontal|center</item>
  </style>  
    
  <style name="main_DetailInfoButton">
  	<item name="android:textSize">16dp</item>
  	<item name="android:layout_width">140dp</item>
  	<item name="android:layout_height">40dp</item>
  </style>
  
  <!-- store_main.xml -->  
  <style name="store_main_StoreMainHeader" parent="DefaultWidthFill">
  </style>
  
  <style name="store_main_StoreImage">
	<item name="android:layout_marginRight">7dp</item>
	<item name="android:layout_marginBottom">7dp</item>
  	<item name="android:layout_width">80dp</item>
  	<item name="android:layout_height">80dp</item>
  	<item name="android:scaleType">centerCrop</item>
  </style>
  
  <style name="store_main_LikeStoreImage">
  	<item name="android:layout_width">30dp</item>	
  	<item name="android:layout_height">30dp</item>	
  	<item name="android:scaleType">fitCenter</item>
  	<item name="android:src">@drawable/img_profile_default</item>
  </style>
  
  <style name="store_main_DefaultText" parent="DefaultWrap">
  	<item name="android:textSize">13dp</item>
  	<item name="android:padding">7dp</item>
  </style>
  
  <style name="store_main_LikeStoreText" parent="store_main_DefaultText">
  	<item name="android:text">@string/store_main_like_store</item>
  </style>
  
  <style name="store_main_StoreAddress">
  	<item name="android:textSize">16dp</item>
  	<item name="android:textStyle">bold</item>
  	<item name="android:layout_marginTop">7dp</item>
  	<item name="android:layout_width">fill_parent</item>
  	<item name="android:layout_height">50dp</item>
  </style>
  
  <style name="store_main_StoreMainContent" parent="DefaultWidthFill">
  </style>
  

    
  <style name="store_main_ScrapButton">
  	<item name="android:layout_width">90dp</item>
  	<item name="android:layout_height">38dp</item>
  </style>
  
  <style name="store_main_DefaultButton">
  	<item name="android:layout_width">65dp</item>
  	<item name="android:layout_height">34dp</item>
  	<item name="android:layout_marginLeft">7dp</item>
  	<item name="android:layout_alignBaseline">@id/store_main_scrap_button</item>
  </style>
  
  <style name="store_main_Cover">
  	<item name="android:textSize">15dp</item>
  	<item name="android:layout_width">fill_parent</item>
  	<item name="android:layout_height">90dp</item>
  	<item name="android:padding">7dp</item>
  </style>
  
  <style name="store_main_DetailItemArea" parent="DefaultWrap">
  	<item name="android:padding">7dp</item>
  	<item name="android:layout_gravity">right</item>
  </style>
  
  <style name="store_main_DetailItem" parent="DefaultWrap">
  	<item name="android:textSize">14dp</item>
  </style>
  
  <style name="store_main_StoreMainFooter" parent="main_ButtonArea">
  </style>
</resources>