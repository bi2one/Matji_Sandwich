<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <shape>
      <solid android:color="@color/minor_tab_focused" />
      <stroke android:width="1px"
	      android:color="@color/minor_tab_border_focused" />
      <corners
	  android:topRightRadius="7dp"
	  android:bottomLeftRadius="7dp" />
    </shape>
  </item>

  <item android:state_focused="true">
    <shape>
      <solid android:color="@color/minor_tab_focused" />
      <stroke android:width="1px"
	      android:color="@color/minor_tab_border_focused" />
      <corners
	  android:topRightRadius="7dp"
	  android:bottomLeftRadius="7dp" />
    </shape>
  </item>

  <item android:state_selected="true">
    <shape>
      <solid android:color="@color/minor_tab_focused" />
      <stroke android:width="1px"
	      android:color="@color/minor_tab_border_focused" />
      <corners
	  android:topRightRadius="7dp"
	  android:bottomLeftRadius="7dp" />
    </shape>
  </item>
  
  <item>
    <shape>
      <solid android:color="@color/minor_tab_default" />
      <stroke
 	  android:width="1px"
	  android:color="@color/minor_tab_border_default" />
      <corners
	  android:topRightRadius="7dp"
	  android:bottomLeftRadius="7dp" />
    </shape>
  </item>
</selector>