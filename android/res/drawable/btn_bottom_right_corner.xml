<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">
	<item
		android:state_pressed="true">
		<shape>
			<solid
				android:color="@color/pressed2"/>
			<stroke
				android:width="1px"
				android:color="#dddddd" />
			<corners
				android:bottomLeftRadius="3dp" />
		</shape>
	</item>

	<item
		android:state_focused="true">
		<shape>
			<solid
				android:color="@color/focused2"/>
			<stroke
				android:width="1px"
				android:color="#dddddd" />
			<corners
				android:bottomLeftRadius="3dp" />
		</shape>
	</item>

	<item>
		<shape>
			<solid
				android:color="@color/default2"/>
			<stroke
				android:width="1px"
				android:color="#dddddd" />
			<corners
				android:bottomLeftRadius="3dp" />
		</shape>
	</item>
</selector>