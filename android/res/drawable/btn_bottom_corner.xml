<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
  <item
      android:state_pressed="true">
    <shape>
      <solid
	  android:color="@color/pressed2"/>
      <stroke
	  android:width="1dp"
	  android:color="@color/matji_dark_brown" />
      <corners
	  android:bottomRightRadius="@dimen/round_btn_radius"
	  android:bottomLeftRadius="@dimen/round_btn_radius" />
    </shape>
  </item>

  <item
      android:state_focused="true">
    <shape>
      <solid
	  android:color="@color/focused2"/>
      <stroke
	  android:width="1dp"
	  android:color="@color/matji_dark_brown" />
      <corners
	  android:bottomRightRadius="@dimen/round_btn_radius"
	  android:bottomLeftRadius="@dimen/round_btn_radius" />
    </shape>
  </item>

  <item>
    <shape>
      <solid
	  android:color="@color/default2"/>
      <stroke
	  android:width="1dp"
	  android:color="@color/matji_dark_brown" />
      <corners
	  android:bottomRightRadius="@dimen/round_btn_radius"
	  android:bottomLeftRadius="@dimen/round_btn_radius" />
    </shape>
  </item>
</selector>