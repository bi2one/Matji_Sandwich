<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/UserCell">
	<include
		android:layout_width="@dimen/profile_size_cell"
		android:layout_height="@dimen/profile_size_cell"
		layout="@layout/profile" />
	<RelativeLayout
	android:layout_marginLeft="@dimen/default_distance"
		style="@style/DefaultWrap">
		<LinearLayout
			android:layout_toRightOf="@+id/profile"
			style="@style/DefaultWrap"
			android:orientation="vertical">
			<TextView
				android:id="@+id/cell_user_nick"
				style="@style/DefaultWrap"
				android:textColor="@color/default_theme_main"
				android:textSize="@dimen/text_xxlarge" />
			<LinearLayout
				style="@style/DefaultWrap">
				<TextView
					style="@style/DefaultWrap"
					android:textColor="@color/default_theme_key"
					android:layout_marginRight="@dimen/default_distance"
					android:text="@string/cell_user_point" />
				<TextView
					style="@style/DefaultWrap"
					android:id="@+id/cell_user_point"
					android:textColor="@color/default_theme_value" />
			</LinearLayout>
			<LinearLayout
				style="@style/DefaultWrap">
				<TextView
					style="@style/DefaultWrap"
					android:layout_marginRight="@dimen/default_distance"
					android:textColor="@color/default_theme_key"
					android:text="@string/cell_user_area" />
				<TextView
					style="@style/DefaultWrap"
					android:id="@+id/cell_user_area"
					android:textColor="@color/default_theme_value" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:layout_alignParentRight="true"
			style="@style/DefaultWrap"
			android:orientation="vertical">
			<Button
				android:layout_width="80dp"
				android:layout_height="wrap_content"
				android:background="@drawable/btn_white"
				android:textColor="@color/default_theme_key"
				android:singleLine="true"
				android:drawableLeft="@drawable/img_heart"
				android:layout_marginBottom="@dimen/default_distance"
				android:id="@+id/cell_user_like_list" />
			<Button
				android:layout_width="80dp"
				android:layout_height="wrap_content"
				android:background="@drawable/btn_red"
				android:id="@+id/cell_user_follow"
				android:text="@string/cell_user_follow" />
			<Button
				android:layout_width="80dp"
				android:layout_height="wrap_content"
				android:background="@drawable/btn_white"
				android:textColor="@color/default_theme_key"
				android:singleLine="true"
				android:drawableLeft="@drawable/img_heart"
				android:id="@+id/cell_user_message_list"
				android:visibility="gone" />
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>


