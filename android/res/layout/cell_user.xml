<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/UserCell">
	<include
		layout="@layout/profile" />
	<RelativeLayout
		style="@style/DefaultWrap">
		<TextView
			style="@style/cell_user_Name"
			android:id="@+id/cell_user_name"
			android:singleLine="true" />
		<TextView
			style="@style/cell_user_Grade"
			android:id="@+id/cell_user_grade"
			android:layout_below="@id/cell_user_name" />
		<TextView
			style="@style/cell_user_PointText"
			android:id="@+id/cell_user_point_text"
			android:layout_below="@id/cell_user_grade"
			android:layout_toRightOf="@id/cell_user_grade" />
		<TextView
			style="@style/cell_user_Title"
			android:id="@+id/cell_user_title"
			android:layout_below="@id/cell_user_grade" />
<!-- 		<TextView -->
<!-- 			style="@style/cell_user_Intro" -->
<!-- 			android:id="@+id/cell_user_intro" -->
<!-- 			android:layout_below="@id/cell_user_title" /> -->
		<Button
			style="@style/LikeButton"
			android:id="@+id/cell_user_like_btn"
			android:layout_alignParentRight="true"
			android:onClick="onLikeButtonClicked" />
		<Button
			style="@style/cell_user_FollowButton"
			android:id="@+id/user_main_follow_btn"
			android:layout_alignParentRight="true"
			android:layout_below="@id/cell_user_like_btn"
			android:onClick="onFollowButtonClicked" />
	</RelativeLayout>
</LinearLayout>