<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/DefaultWidthFill"
	android:padding="7dp"
	android:gravity="center_vertical">
	<TextView
		style="@style/Name"
		android:singleLine="true"
		android:id="@+id/store_main_name"
		android:maxWidth="@dimen/max_title_width" />
	<ImageButton
		style="@style/InfoButton"
		android:id="@+id/store_main_info_btn" />
	<LinearLayout
		style="@style/DefaultWidthFill"
		android:gravity="right">
		<Button
			style="@style/LikeButton"
			android:id="@+id/store_main_like_btn"
			android:onClick="onLikeButtonClicked" />
	</LinearLayout>
</LinearLayout>
