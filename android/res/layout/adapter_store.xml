<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="#fff">
	<LinearLayout
		android:id="@+id/image"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_margin="3dp"
		android:padding="3dp"
		android:layout_alignParentLeft="true">
		<ImageView
			android:background="@drawable/img_thumbnail_bg"
			android:id="@+id/store_adapter_thumbnail"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:scaleType="centerCrop" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="85dp"
		android:layout_alignParentRight="true"
		android:padding="5dp"
		android:id="@+id/like_count">
		<TextView
			android:id="@+id/store_adapter_like_count"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_gravity="center"
			android:textColor="@color/DARK_ORANGE"
			android:drawableTop="@drawable/btn_unlike"
			android:drawablePadding="3dp" />
	</LinearLayout>
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="85dp"
		android:padding="5dp"
		android:layout_toRightOf="@id/image"
		android:layout_toLeftOf="@id/like_count"
		android:id="@+id/store_info">
		<TextView
			android:id="@+id/store_adapter_name"
			android:layout_width="fill_parent"
			android:layout_height="30dp"
			android:textColor="#000"
			android:singleLine="true"
			android:layout_alignParentTop="true" />
		<TextView
			android:id="@+id/store_adapter_address"
			android:layout_width="fill_parent"
			android:layout_height="55dp"
			android:textColor="#000"
			android:singleLine="true"
			android:layout_below="@id/store_adapter_name" />
	</LinearLayout>
</RelativeLayout>