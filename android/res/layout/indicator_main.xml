<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		style="@style/IndicatorMain">
  <ImageView
      android:id="@+id/indicator_main_icon"
      android:layout_centerHorizontal="true"
      style="@style/IndicatorMainIcon" />
  <com.matji.sandwich.widget.indicator.MainIndicatorTextView
      android:id="@+id/indicator_main_label"
      android:singleLine="true"
      android:layout_marginLeft="@dimen/default_distance_half"
      android:layout_marginRight="@dimen/default_distance_half"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/indicator_main_icon"
      style="@style/IndicatorMainText" />
</RelativeLayout>