<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/adapter_near_store" >
  <TextView
      android:id="@+id/adapter_near_store_name"
      android:layout_alignParentLeft="true"
      style="@style/adapter_near_store_name" />
  <LinearLayout
      android:id="@+id/adapter_near_store_desc"
      android:layout_alignParentLeft="true"
      android:layout_below="@id/adapter_near_store_name"
      style="@style/adapter_near_store_desc" >
    <ImageView style="@style/adapter_near_store_heart" />
    <TextView
	style="@style/adapter_near_store_desc_text"
	android:id="@+id/adapter_near_store_like_count" />
    <ImageView style="@style/adapter_near_store_balloon" />
    <TextView
	style="@style/adapter_near_store_desc_text"
	android:id="@+id/adapter_near_store_post_count" />
  </LinearLayout>
  <com.matji.sandwich.widget.BookmarkStarToggleView
      android:id="@+id/adapter_near_store_bookmark"
      style="@style/adapter_near_store_bookmark"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true" />
  <ImageView style="@style/adapter_near_store_divider"
	     android:layout_alignParentBottom="true" />
</RelativeLayout>
  
      
	    
