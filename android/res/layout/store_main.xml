<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:padding="7dp">
	<LinearLayout
		style="@style/store_main_StoreMainHeader"
		android:orientation="vertical">
		<RelativeLayout
			style="@style/DefaultWidthFill"
			android:id="@+id/store_main_header">
			<ImageView
				style="@style/store_main_StoreImage"
				android:id="@+id/store_main_store_image"
				android:src="@drawable/profile_default_img" />
			<ImageView
				style="@style/store_main_LikeStoreImage"
				android:id="@+id/store_main_like_store_image"
				android:layout_toRightOf="@id/store_main_store_image" />
			<TextView
				style="@style/store_main_LikeStoreText"
				android:id="@+id/store_main_like_store"
				android:layout_toRightOf="@id/store_main_like_store_image" />
			<TextView
				style="@style/store_main_DefaultText"
				android:id="@+id/store_main_like_store_count"
				android:layout_toRightOf="@id/store_main_like_store" />
			<TextView
				style="@style/store_main_StoreAddress"
				android:id="@+id/store_main_store_address"
				android:layout_toRightOf="@id/store_main_store_image"
				android:layout_below="@id/store_main_like_store_image" />
		</RelativeLayout>
		<LinearLayout
			style="@style/main_ButtonArea"
			android:id="@+id/store_main_header_button">
			<Button
				android:text="스크랩"
				android:textSize="16dp"
				android:textStyle="bold"
				style="@style/store_main_ScrapButton"
				android:id="@+id/store_main_scrap_button" />
			<Button
				android:text="지도"
				android:textSize="13dp"
				android:textStyle="bold"
				style="@style/store_main_DefaultButton"
				android:id="@+id/store_main_map_button" />
			<Button
				android:text="전화"
				android:textSize="13dp"
				android:textStyle="bold"
				style="@style/store_main_DefaultButton"
				android:id="@+id/store_main_tel_button" />
			<Button
				android:text="웹"
				android:textSize="13dp"
				android:textStyle="bold"
				style="@style/store_main_DefaultButton"
				android:id="@+id/store_main_web_button" />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		style="@style/store_main_StoreMainContent"
		android:orientation="vertical">
		<TextView
			style="@style/store_main_Cover"
			android:id="@+id/store_main_cover" />
		<LinearLayout
			style="@style/store_main_DetailItemArea"
			android:id="@+id/store_main_detail_item_area">
			<ImageView
				android:layout_width="7dp"
				android:layout_height="7dp" />
			<TextView
				style="@style/store_main_DetailItem"
				android:id="@+id/store_main_reg_user"
				android:textColor="#aaa" />
		</LinearLayout>
		<LinearLayout
			style="@style/main_ButtonArea">
			<Button
				android:text="맛집정보 보기"
				style="@style/main_DetailInfoButton"
				android:id="@+id/store_main_show_store_info_view_button" />
			<Button
				android:text="메뉴 보기"
				style="@style/main_DetailInfoButton"
				android:id="@+id/store_main_menu_view_button"
				android:layout_marginLeft="7dp" />
		</LinearLayout>
	</LinearLayout>
	<RelativeLayout
		style="@style/store_main_StoreMainFooter">
		<Button
			style="@style/main_DetailInfoButton"
			android:id="@+id/store_main_memo_view_button" />
		<Button
			style="@style/main_DetailInfoButton"
			android:id="@+id/store_main_image_view_button"
			android:layout_toRightOf="@id/store_main_memo_view_button" />
		<Button
			style="@style/main_DetailInfoButton"
			android:id="@+id/store_main_tag_view_button"
			android:layout_below="@id/store_main_memo_view_button" />
		<Button
			style="@style/main_DetailInfoButton"
			android:id="@+id/store_main_url_button"
			android:layout_below="@id/store_main_image_view_button"
			android:layout_toRightOf="@id/store_main_tag_view_button" />
	</RelativeLayout>
</LinearLayout>