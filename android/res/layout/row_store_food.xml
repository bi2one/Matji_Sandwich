<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/DefaultWidthFill">
	<RelativeLayout
		android:id="@+id/row_store_food_wrapper"
		style="@style/DefaultWidthFill"
		android:minHeight="@dimen/row_store_food_min_height"
		android:layout_marginLeft="@dimen/default_distance"
		android:layout_marginRight="@dimen/default_distance">
		<TextView
			android:id="@+id/row_store_food_name"
			style="@style/DefaultWrap"
			android:textSize="@dimen/row_store_food_name_size"
			android:textColor="@color/matji_gray"
			android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_distance_long" />
		<com.matji.sandwich.widget.BoldStyleTextView
			android:id="@+id/row_store_food_like_count"
			style="@style/DefaultWrap"
			android:textColor="@color/matji_red"
			android:drawableLeft="@drawable/img_like_cnt"
			android:drawablePadding="@dimen/default_drawable_padding"
			android:layout_marginRight="@dimen/default_distance_long"
			android:layout_toLeftOf="@+id/row_store_food_moresign"
			android:layout_centerVertical="true" />
		<ImageView
			android:id="@+id/row_store_food_moresign"
			android:src="@drawable/icon_flow"
			style="@style/DefaultWrap"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/default_distance_long" />
	</RelativeLayout>
	<View
		android:id="@+id/row_store_food_horizontal_line"
		android:layout_marginLeft="@dimen/default_distance"
		android:layout_marginRight="@dimen/default_distance"
		style="@style/HorizontalLine"
		android:layout_alignParentBottom="true" />
</RelativeLayout>