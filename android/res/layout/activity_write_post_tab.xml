<?xml version="1.0" encoding="utf-8"?>
<com.matji.sandwich.widget.RelativeLayoutThatDetectsSoftKeyboard
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_write_post_tab"
    style="@style/DefaultFill">
  
  <com.matji.sandwich.widget.title.WritePostTitle
      android:layout_alignParentTop="true"
      android:id="@+id/activity_write_post_tab_title"
      style="@style/DefaultWidthFill" />
  
  <com.matji.sandwich.widget.RoundTabHost
      android:id="@android:id/tabhost"
      android:layout_below="@id/activity_write_post_tab_title"
      style="@style/DefaultFill">
    <LinearLayout
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
      <FrameLayout
	  android:id="@android:id/tabcontent"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:layout_weight="1" />
      <TabWidget
	  android:id="@android:id/tabs"
	  style="@style/post_tab_TabBar"
	  android:layout_weight="0" />
    </LinearLayout>
  </com.matji.sandwich.widget.RoundTabHost>
</com.matji.sandwich.widget.RelativeLayoutThatDetectsSoftKeyboard>
