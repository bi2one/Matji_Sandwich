<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/user_talk_wrapper"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/pattern_bg"
	android:orientation="vertical">

	<!-- Main Title -->
	<com.matji.sandwich.widget.title.MainTitle
		style="@style/DefaultWrap" />

	<!-- User Cell -->
	<com.matji.sandwich.widget.cell.UserCell
		style="@style/DefaultWrap" />

	<!-- Seperate Line -->
	<RelativeLayout
		style="@style/DefaultWidthFill">
		<ImageView
			style="@style/DefaultWidthFill"
			android:background="@drawable/seperate_line" />
	</RelativeLayout>
		
	<com.matji.sandwich.widget.cell.UserIntroCell
		style="@style/DefaultWrap" />

	<!-- Seperate Line -->
	<RelativeLayout
		style="@style/DefaultWidthFill">
		<ImageView
			style="@style/DefaultWidthFill"
			android:background="@drawable/seperate_line" />
	</RelativeLayout>

	<!-- User Tab -->
	<com.matji.sandwich.widget.RoundTabHost
		android:id="@android:id/tabhost"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<TabWidget
				android:id="@android:id/tabs"
				style="@style/post_tab_TabBar"
				android:background="#fff"
				android:layout_weight="0" />
			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
			<FrameLayout
				android:id="@android:id/tabcontent"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1" />
		</LinearLayout>
	</com.matji.sandwich.widget.RoundTabHost>
	
	<!-- Seperate Line -->
	<RelativeLayout
		style="@style/DefaultWidthFill">
		<ImageView
			style="@style/DefaultWidthFill"
			android:background="@drawable/seperate_line" />
	</RelativeLayout>
</LinearLayout>