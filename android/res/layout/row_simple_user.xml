<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/row_simple_user">
	<!-- ranking body -->
	<RelativeLayout
		android:id="@+id/row_simple_user_body"
		style="@style/row_simple_user_body"
		android:layout_toLeftOf="@+id/row_simple_user_point"
		android:layout_centerVertical="true">

		<!-- profile image -->
		<include
			android:id="@+id/row_simple_user_profile"
			layout="@layout/profile"
			style="@style/ProfileWrapper"
			android:layout_marginRight="@dimen/default_distance"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true" />

		<!-- nickname -->
		<TextView
			android:id="@+id/row_simple_user_nickname"
			android:layout_toRightOf="@id/row_simple_user_profile"
			android:layout_alignTop="@id/profile"
			style="@style/row_simple_user_nickname" />

		<!-- heart and balloon -->
		<LinearLayout
			android:layout_toRightOf="@id/row_simple_user_profile"
			android:layout_below="@id/row_simple_user_nickname"
			style="@style/row_simple_user_count_wrap">
			<TextView
				android:id="@+id/row_simple_user_like_count"
				style="@style/row_simple_user_like_count" />
			<TextView
				android:id="@+id/row_simple_user_post_count"
				style="@style/row_simple_user_post_count" />
		</LinearLayout>
	</RelativeLayout>

	<!-- ranking point -->
	<TextView
		android:id="@+id/row_simple_user_point"
		android:layout_toLeftOf="@+id/row_simple_user_point_hint"
		android:layout_centerVertical="true"
		style="@style/row_simple_user_point" />
	<TextView
		android:id="@id/row_simple_user_point_hint"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:text="@string/row_simple_user_point_hint"
		style="@style/row_simple_user_point_hint" />

	<!-- division bar -->
	<!-- <ImageView -->
	<!-- android:layout_alignParentBottom="true" -->
	<!-- style="@style/row_simple_user_divider" /> -->
</RelativeLayout>