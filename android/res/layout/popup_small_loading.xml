<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="40dp"
    android:layout_height="40dp">
  <ProgressBar
      android:id="@+id/progress_loading"
      android:indeterminateDrawable="@drawable/animationlist_loading_black"
      android:indeterminateDuration="300"
      android:layout_width="16.67dip"
      android:layout_height="16.67dip"
      android:layout_centerInParent="true"
      android:background="@android:color/transparent"/>
  <Button
      android:text="text"
      android:visibility="invisible"
      android:layout_toLeftOf="@id/progress_loading"
      style="@style/DefaultWrap" />
</RelativeLayout>